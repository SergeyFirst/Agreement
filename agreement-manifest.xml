<?xml version="1.0" encoding="utf-8"?>
<OfficeApp xmlns=
  "http://schemas.microsoft.com/office/appforoffice/1.1"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
  xsi:type="MailApp">

  <Id>a8a5f096-3d51-48bb-b6da-e591cd62560e</Id>
  <Version>1.0</Version>
  <ProviderName>Regioncom</ProviderName>
  <DefaultLocale>ru-ru</DefaultLocale>
  <DisplayName DefaultValue="Согласование договоров"/>
  <Description DefaultValue="Согласование договоров через Outlook">
    
  </Description>
  
  <IconUrl DefaultValue="https://hr.regioncom.ru/agreement/img/small_doc.png" />
  <HighResolutionIconUrl DefaultValue="https://hr.regioncom.ru/img/doc.png"/>
  

  <Hosts>
    <Host Name="Mailbox" />
  </Hosts>
  <Requirements>
    <Sets DefaultMinVersion="1.1">
      <Set Name="Mailbox" />
    </Sets>
  </Requirements>

  <FormSettings>
    <Form xsi:type="ItemRead">
      <DesktopSettings><!--To publish to the Add-in Store, enter the URL that this app will be hosted-->
    <SourceLocation DefaultValue="https://hr.regioncom.ru/agreement/dist/index.html" /><RequestedHeight>450</RequestedHeight></DesktopSettings><TabletSettings><!--To publish to the Add-in Store, enter the URL that this app will be hosted-->
    <SourceLocation DefaultValue="https://hr.regioncom.ru/agreement/dist/index.html" /><RequestedHeight>450</RequestedHeight></TabletSettings><PhoneSettings><!--To publish to the Add-in Store, enter the URL that this app will be hosted-->
    <SourceLocation DefaultValue="https://hr.regioncom.ru/agreementdist//index.html" /></PhoneSettings></Form><Form xsi:type="ItemEdit"><DesktopSettings><!--To publish to the Add-in Store, enter the URL that this app will be hosted-->
    <SourceLocation DefaultValue="https://hr.regioncom.ru/agreement/dist/index.html" /></DesktopSettings><TabletSettings><!--To publish to the Add-in Store, enter the URL that this app will be hosted-->
    <SourceLocation DefaultValue="https://hr.regioncom.ru/agreement/dist/index.html" /></TabletSettings><PhoneSettings><!--To publish to the Add-in Store, enter the URL that this app will be hosted-->
    <SourceLocation DefaultValue="https://hr.regioncom.ru/agreement/dist/index.html" /></PhoneSettings>
  </Form>
</FormSettings>

  <Permissions>ReadWriteItem</Permissions>
  <Rule xsi:type="RuleCollection" Mode="Or">
  <!-- To add more complex rules, add additional rule elements -->
  <Rule xsi:type="RuleCollection" Mode="And">
    <Rule xsi:type="ItemIs" ItemType="Message" FormType="Read" />
  </Rule>
  <Rule xsi:type="ItemIs" ItemType="Message" FormType="Edit" />
  <!-- E.g. To activate when a message contains an address -->
  <!-- <Rule xsi:type="ItemHasKnownEntity" EntityType="Address" /> -->
  </Rule>

</OfficeApp>


